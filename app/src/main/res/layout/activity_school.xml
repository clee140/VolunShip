<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/green4"
    tools:context=".SchoolActivity">


    <Button
        android:id="@+id/toys_print"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="550dp"
        android:background="@drawable/rounded_corner"
        android:fontFamily="@font/roboto_bold"
        android:text="Print label for school supplies"
        android:textColor="#201F1C"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/stationary_print"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_marginLeft="260dp"
        android:layout_marginTop="550dp"
        android:background="@drawable/rounded_corner"
        android:fontFamily="@font/roboto_bold"
        android:text="Print label for stationary"
        android:textColor="#201F1C"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/crayons_print"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_marginLeft="135dp"
        android:layout_marginTop="550dp"
        android:background="@drawable/rounded_corner"
        android:fontFamily="@font/roboto_bold"
        android:text="Print label for crayons"
        android:textColor="#201F1C"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="229dp"
        android:layout_height="210dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="88dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/school_supplies3" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="250dp"
        android:text="School"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="330dp"
        android:text="Donate new school supplies and backpacks, crayons, or any used stationary.
Through these donations, students and teachers will have access to what they need to success.
The environment will also benefit, as crayons and stationary are avoiding the landfill and are
being repurposed into new products." />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="460dp"
        android:text="TerraCycle will recycle your stationary, the non-profit, Crayon Initiative, will recycle your crayons, and
the non-proft, Kids In Need Foundation, will distribute the school supplies." />

    <Button
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginTop="5dp"
        android:backgroundTint="@android:color/holo_green_light"
        android:gravity="bottom|center"
        android:onClick="launchHomePage"
        android:text="â†"
        android:textSize="50dp" />
</RelativeLayout>