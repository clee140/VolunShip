<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/green4"
    tools:context=".SportsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/green4"
        tools:context=".SportsActivity">

        <Button
            android:id="@+id/legos_print"
            android:layout_width="194dp"
            android:layout_height="70dp"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="530dp"
            android:background="@drawable/rounded_corner"
            android:fontFamily="@font/roboto_bold"
            android:text="Print label for tennis balls"
            android:textColor="#201F1C"
            android:textSize="11sp" />

        <Button
            android:id="@+id/toys_print"
            android:layout_width="194dp"
            android:layout_height="70dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="530dp"
            android:background="@drawable/rounded_corner"
            android:fontFamily="@font/roboto_bold"
            android:text="Print label for baseball equipment"
            android:textColor="#201F1C"
            android:textSize="11sp" />


        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="229dp"
            android:layout_height="219dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="88dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/sports_icon2" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="250dp"
            android:text="Sports"
            android:textColor="@color/black"
            android:textSize="40sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="330dp"
            android:text="Donate any baseball equipment or old tennis balls. The baseball equipment
will be distributed around the nation to those who can't afford new equipment. The tennis balls
will be shredded and turned into materials for tennis courts, stucco, and rubber mulch." />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="450dp"
            android:text="The non-profit, Turn Two for Youth, will distribute the equipment and the
non-profit, Recycle Balls, will repurpose your tennis balls." />

        <Button
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginTop="5dp"
            android:backgroundTint="@android:color/holo_green_light"
            android:gravity="bottom|center"
            android:onClick="launchHomePage"
            android:text="â†"
            android:textSize="50dp" />
    </RelativeLayout>
</RelativeLayout>